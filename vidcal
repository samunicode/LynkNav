<body>
    <div class="container">
        <h1>Video Speed Calculator</h1>
        <div class="input-group">
            <label for="hours">Hours:</label>
            <input type="number" id="hours" min="0">
        </div>
        <div class="input-group">
            <label for="minutes">Minutes:</label>
            <input type="number" id="minutes" min="0" max="59">
        </div>
        <button id="calculateBtn">Calculate</button>
        <div class="result" id="result"></div>
    </div>

    <script>
        document.getElementById('calculateBtn').addEventListener('click', calculateTime);

        function calculateTime() {
            const hours = parseInt(document.getElementById('hours').value) || 0;
            const minutes = parseInt(document.getElementById('minutes').value) || 0;

            const totalMinutes = hours * 60 + minutes;

            const speeds = [1.25, 1.5, 1.75, 2];
            const resultDiv = document.getElementById('result');
            resultDiv.innerHTML = '';

            speeds.forEach(speed => {
                const newTime = totalMinutes / speed;
                const newHours = Math.floor(newTime / 60);
                const newMinutes = Math.round(newTime % 60);

                const result = document.createElement('div');
                result.innerText = `At ${speed}x speed: ${newHours} hours ${newMinutes} minutes`;
                resultDiv.appendChild(result);
            });
        }
    </script>
